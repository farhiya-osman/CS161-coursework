int get_vowelsandConstants(string &sentance ){
  
int vowelcount ; 
int vcount = 0; 
int ccount = 0; 

for (int i = 0; i < sentance[i] != '\0' ; ++i)
{
   if(sentance[i] == 'a' || sentance[i] == 'i' || sentance[i] == 'e' || sentance[i] == 'o'){
      vcount++ ;
   } 
   else{
      ccount ++ ;
   }
   
}
cout << "The number of vowels are: " << vcount << endl;
cout << "The number of constants are: " << ccount << endl; 

if(vcount == ccount ){
  cout << "The number of vowels equal the number of constants: "<< endl ; 
}
else
{
  cout << "The number of vowels do not equal the number of constants: " << endl; 
}


}
